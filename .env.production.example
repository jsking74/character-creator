# Production Environment Template for VPS Deployment
# Copy this to .env.production and fill in your values
# NEVER commit the actual .env.production file!

# Database
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_NAME=character_creator

# JWT - Generate with: openssl rand -hex 64
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS - Your server IP or domain
CORS_ORIGINS=http://YOUR_SERVER_IP:8080

# Frontend API URL
VITE_API_URL=http://YOUR_SERVER_IP:5000

# Logging
LOG_LEVEL=info
