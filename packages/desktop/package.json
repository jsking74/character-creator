{
  "name": "@character-creator/desktop",
  "version": "0.1.0",
  "description": "Desktop app for Character Creator",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k \"npm run dev -w @character-creator/frontend\" \"sleep 3 && npm run dev:electron\"",
    "dev:electron": "env -u ELECTRON_RUN_AS_NODE electron .",
    "build": "tsc",
    "build:all": "npm run build -w @character-creator/shared && npm run build -w @character-creator/frontend && tsc",
    "start": "env -u ELECTRON_RUN_AS_NODE cross-env NODE_ENV=production electron .",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "sql.js": "^1.8.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/sql.js": "^1.4.9",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.charactercreator.app",
    "productName": "Character Creator",
    "files": [
      "dist/**/*",
      "../frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
