# Production Environment Configuration
# Copy this to .env.production and fill in your values

NODE_ENV=production
PORT=5000

# CORS - Set to your production frontend URL(s)
CORS_ORIGINS=https://your-domain.com

# Database - Use PostgreSQL in production
USE_SQLITE=false
DB_HOST=your-db-host.com
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_NAME=character_creator

# JWT - REQUIRED: Use strong, unique secrets in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_secure_64_byte_hex_string_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Logging
LOG_LEVEL=info

# Optional: Rate limiting (requests per 15 minutes)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
