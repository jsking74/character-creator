{
  "name": "@character-creator/backend",
  "version": "0.1.0",
  "description": "Backend API for Character Creator",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "db:seed": "node --loader ts-node/esm src/database/seed.ts",
    "db:migrate": "npm run build && typeorm migration:run -d dist/database/data-source.js",
    "db:migrate:revert": "npm run build && typeorm migration:revert -d dist/database/data-source.js",
    "db:migrate:show": "npm run build && typeorm migration:show -d dist/database/data-source.js",
    "db:reset": "node -e \"require('fs').rmSync('dev.db', {force: true})\" && npm run db:seed"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/passport-jwt": "^3.0.10",
    "@types/pdfkit": "^0.17.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "better-sqlite3": "^12.5.0",
    "eslint": "^8.55.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
